{
  "version": "1.0.1-*",

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "Autofac": "4.0.0",
    "NugetyCore": "1.0.1-*"
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  },
  "buildOptions": {
    "xmlDoc": true,
    "nowarn": [ "1591" ]
  },
  "packOptions": {
    "owners": [ "ThinkAbout" ],
    "summary": "NugetyCore.Autofac package summary",
    "releaseNotes": "Initial Release",
    "requireLicenseAcceptance": false,
    "iconUrl": "https://raw.githubusercontent.com/thinkabouthub/NugetyCore/master/nugety_icon.png",
    "tags": [ "nugety", "nugety.autofac", "nugetyautofac", "c#", "dotnetcore" ]
  },
  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}
