{
  "version": "1.0.0-*",

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "Microsoft.AspNetCore.Mvc": "1.0.0",
    "NugetyCore": "1.0.0-*"
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  },
  "buildOptions": {
    "xmlDoc": true,
    "nowarn": [ "1591" ]
  },
  "packOptions": {
    "owners": [ "ThinkAbout" ],
    "summary": "NugetyCore.AspNetCore package summary",
    "releaseNotes": "Initial Release",
    "requireLicenseAcceptance": false,
    "tags": [ "nugety", "c#", "dotnetcore" ]
  },
  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}
